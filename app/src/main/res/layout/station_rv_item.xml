<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    android:background="@drawable/rv_station_list_item_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/RouteNum"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="A">
        </TextView>

        <LinearLayout
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/stationName"
                style="@style/RouteTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Остановка"
                android:textColor="@color/fade" />

            <TextView
                android:id="@+id/stationDistance"
                style="@style/RouteSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20м">

            </TextView>
        </LinearLayout>

        <ImageView
            android:id="@+id/imagePlay"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:srcCompat="@drawable/play_foreground" />
    </LinearLayout>

</LinearLayout>
