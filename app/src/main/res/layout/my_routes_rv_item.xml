<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rv_route_list_item"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/RouteNumber"
            style="@style/RouteNum"
            android:layout_width="67dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="31" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">

            <TextView
                android:id="@+id/RoutePoints"
                style="@style/RouteTitle"
                android:paddingBottom="5dp"
                android:text="пл Славы - сад 20 лет победы" />

            <TextView
                android:id="@+id/RouteStatus"
                style="@style/RouteSmall"
                android:text="Основной" />
        </LinearLayout>

        <ImageView
            android:id="@+id/DownloadImage"
            android:layout_width="51dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/download_foreground" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/downloadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:paddingRight="15dp"/>


</LinearLayout>
